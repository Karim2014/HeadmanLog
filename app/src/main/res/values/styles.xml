<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <style name="SettingsItem">
        <item name="android:padding">8dp</item>
    </style>

    <style name="SettingsItem.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="SettingsItem.TextView.SubItem">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="SettingsItem.TextView.WithCheckbox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingsItem.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="settings_item_lin_lay">
        <item name="android:clickable">true</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="settings_item_lin_lay.vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Separator">
        <item name="android:background">@drawable/separator</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
    </style>

    <style name="ExpandedItemEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">3</item>
        <item name="android:textSize">19sp</item>
        <item name="android:background">@drawable/gray_rect</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#606060</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="ExpandedItemEditText.Editable">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="NoEditableTextView">
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="NoEditableTextView.DateDialog">
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
