<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.karimsabitov.headmanlog.UI.TextViewFontSupport
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:text="Пара 1\n8:15\n8:30"
            app:customFont="@integer/FontRobotoLight"
            android:textColor="@color/primaryColor"
            android:textSize="15sp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/list_item_schedule_couple_cnum_tv"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_schedule_couple_info_ll">

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.karimsabitov.headmanlog.UI.TextViewFontSupport
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:customFont="@integer/FontRobotoLight"
                    android:textColor="@color/primaryColor"
                    android:textSize="18sp"
                    android:visibility="visible"
                    android:layout_margin="8dp"
                    android:text="@string/empty_couple"
                    android:id="@+id/list_item_schedule_couple_empty_couple"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/list_item_schedule_couple_up_info_ll"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.karimsabitov.headmanlog.UI.TextViewFontSupport
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:customFont="@integer/FontRobotoRegular"
                            tools:text="Дисциплина"
                            android:textColor="@color/primaryColor"
                            android:textSize="20sp"
                            android:id="@+id/list_item_schedule_couple_subject"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_toLeftOf="@+id/list_item_schedule_couple_toc_up"
                            android:layout_toStartOf="@+id/list_item_schedule_couple_toc_up"/>

                        <com.karimsabitov.headmanlog.UI.TextViewFontSupport
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:customFont="@integer/FontRobotoLight"
                            android:textSize="12sp"
                            android:id="@+id/list_item_schedule_couple_toc_up"
                            tools:text="Лек."
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:id="@+id/list_item_schedule_couple_lay">

                        <com.karimsabitov.headmanlog.UI.TextViewFontSupport
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:customFont="@integer/FontRobotoLight"
                            android:textColor="@color/primaryColor"
                            android:id="@+id/list_item_schedule_couple_teacher_n_room"
                            tools:text="Препод"
                            android:textSize="15sp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_toLeftOf="@+id/list_item_schedule_couple_room"
                            android:layout_toStartOf="@+id/list_item_schedule_couple_room"/>

                        <com.karimsabitov.headmanlog.UI.TextViewFontSupport
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/list_item_schedule_couple_room"
                            app:customFont="@integer/FontRobotoLight"
                            tools:text="155 ауд"
                            android:textSize="12sp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                </LinearLayout>

            </android.support.design.widget.CoordinatorLayout>
        </LinearLayout>

        </LinearLayout>

    <View
        android:layout_marginTop="8dp"
        style="@style/Separator"/>

</LinearLayout>