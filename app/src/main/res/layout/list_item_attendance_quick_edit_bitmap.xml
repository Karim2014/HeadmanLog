<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="64dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="4dp"
              android:layout_marginRight="4dp"
              android:paddingBottom="4dp"
    >

    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/list_item_attendance_quick_edit_bitmap_image_v"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"/>

    <com.karimsabitov.headmanlog.UI.TextViewFontSupport
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:customFont="@integer/FontRobotoLight"
        android:maxLines="2"
        android:id="@+id/list_item_attendance_quick_edit_bitmap_text_v"
        tools:text="Фамилия студента"/>

</LinearLayout>