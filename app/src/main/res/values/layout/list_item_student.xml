    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingEnd="8dp"
        android:id="@+id/cardview_student_item">

        <ImageView
            android:id="@+id/list_item_image_student"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/list_item_student_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"

            android:layout_toEndOf="@+id/list_item_image_student"
            android:layout_toRightOf="@+id/list_item_image_student"
            android:textSize="19sp"
            tools:text="Имя и фамилия студента"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/list_item_student_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_student_name_tv"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/list_item_image_student"
            android:layout_toEndOf="@+id/list_item_image_student"
            tools:text="Номер телефона"
            android:singleLine="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:background="@drawable/buttton_birthday"
        android:layout_below="@+id/list_item_student_phone_number"/>

    </RelativeLayout>
