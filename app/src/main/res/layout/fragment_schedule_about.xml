<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/AppTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/fragment_schedule_about_lin_lay">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="2dp"
            style="@style/CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.karimsabitov.headmanlog.UI.TextViewFontSupport
                    android:id="@+id/fragment_attendance_edit_date_pick_edit_text"
                    style="@style/NoEditableTextView.DateDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    app:customFont="@integer/FontRobotoLight"
                    android:textSize="20sp"
                    android:text="12.09.2018 Знаемнатель"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tab_layout_sch_ab">

        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_schedule_about_view_pager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </android.support.v4.view.ViewPager>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>